<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/ui_5dp"
    android:paddingRight="@dimen/ui_5dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />

    <ImageView
        android:id="@+id/trainartlist_item_pic"
        android:layout_width="@dimen/ui_60dp"
        android:layout_height="@dimen/ui_60dp"
        android:layout_centerVertical="true"
        android:padding="@dimen/ui_5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/ui_5dp"
        android:layout_toRightOf="@id/trainartlist_item_pic" >

        <TextView
            android:id="@+id/trainartlist_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/art_title"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/trainartlist_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trainartlist_item_title"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/ui_3dp" >

            <TextView
                android:id="@+id/trainartlist_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_5dp"/>

            <TextView
                android:id="@+id/trainartlist_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>