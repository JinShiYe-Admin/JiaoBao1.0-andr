<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_layout_menu"
    android:layout_width="@dimen/ui_250dp"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:background="@color/gray"
    android:orientation="vertical" >

    <Button
        android:id="@+id/base_menu_btn_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/ui_20dp"
        android:text="@string/set"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/base_menu_btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/ui_20dp"
        android:text="@string/search"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/base_menu_btn_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/ui_20dp"
        android:text="@string/move_announcement"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/base_menu_btn_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/ui_20dp"
        android:text="@string/message_notice"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/base_menu_btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/ui_20dp"
        android:text="@string/share_recommend"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/base_menu_btn_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/ui_20dp"
        android:text="@string/service_support"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/base_menu_btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/ui_20dp"
        android:text="@string/about_us"
        android:textColor="@color/white" />

</LinearLayout>