<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ui_70dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/pcshow_gridviewitem_clickbg"
        android:layout_width="@dimen/ui_70dp"
        android:layout_height="@dimen/ui_70dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/pcshow_layout"
        android:layout_width="@dimen/ui_70dp"
        android:layout_height="@dimen/ui_70dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/pcshow_gridviewitem_icon"
            android:layout_width="@dimen/ui_60dp"
            android:layout_height="@dimen/ui_60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_unit_junior" />

        <TextView
            android:id="@+id/pcshow_gridviewitem_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ui_15dp"
            android:layout_marginTop="@dimen/ui_5dp"
            android:background="@drawable/textview_badview"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pcshow_gridviewitem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcshow_gridviewitem_clickbg"
        android:layout_centerVertical="true"
        android:layout_marginTop="-8dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="2"
        android:text="adsfasaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>