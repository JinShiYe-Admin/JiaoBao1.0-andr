<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_to_dip_10" >

        <TextView
            android:id="@+id/qiuzhip_item_tv_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_qiuzhi_question" />

        <TextView
            android:id="@+id/qiuzhip_item_tv_att"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/px_to_sp_22"
            android:textColor="@color/color_2589d1"
			android:text="@string/unfollow"/>

        <TextView
            android:id="@+id/qiuzhip_item_tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/qiuzhip_item_tv_att"
            android:layout_toRightOf="@id/qiuzhip_item_tv_q"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/px_to_sp_22" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/qiuzhip_item_layout_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px_to_dip_15"
        android:paddingLeft="@dimen/px_to_dip_10" >

        <TextView
            android:id="@+id/qiuzhip_item_tv_attnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_to_sp_18" />

        <TextView
            android:id="@+id/qiuzhip_item_tv_answernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_to_dip_15"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_to_sp_18" />
        
        <TextView
            android:id="@+id/qiuzhip_item_tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_to_dip_15"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_to_sp_18" />

        <TextView
            android:id="@+id/qiuzhip_item_tv_opennum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_to_dip_15"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_to_sp_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_cccccc" />

</LinearLayout>