<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_48"
        android:layout_marginLeft="@dimen/px_to_dip_30"
        android:gravity="center_vertical" >

        <RadioButton
            android:id="@+id/tree_workol_stu_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/workol_tea_radiobutton" />

        <TextView
            android:id="@+id/tree_workol_stu_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/tree_workol_stu_radiobutton"
            android:paddingLeft="@dimen/px_to_dip_10"
            android:text="@string/first_grade"
            android:layout_marginRight="@dimen/px_to_dip_50"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/color_797979"
            android:textSize="@dimen/px_to_sp_18" />

        <ImageView
            android:id="@+id/tree_root_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_worksend_selit_plus" />
    </RelativeLayout>

</RelativeLayout>