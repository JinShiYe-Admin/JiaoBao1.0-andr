<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_worksend_msgcontent"
        android:orientation="vertical"
        android:padding="1px" >

        <TextView
            android:id="@+id/worksend_unit_tv_unitname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_to_dip_40"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:gravity="center_vertical"
            android:textSize="@dimen/px_to_sp_18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebebeb" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_to_dip_10"
                android:text="@string/stuff_devideGroup"
                android:textColor="#616060"
                android:textSize="@dimen/px_to_sp_20" />

            <CheckBox
                android:id="@+id/worksend_unit_cb_invert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/px_to_dip_10"
                android:button="@null"
                android:text="@string/inverse"
                android:textColor="#292929"
                android:textSize="@dimen/px_to_sp_20" />

            <CheckBox
                android:id="@+id/worksend_unit_cb_selectall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_to_dip_10"
                android:layout_toLeftOf="@id/worksend_unit_cb_invert"
                android:button="@drawable/worksend_checkedbox"
                android:text="@string/all_select"
                android:textColor="#292929"
                android:textSize="@dimen/px_to_sp_20" />
        </RelativeLayout>

        <com.jsy_jiaobao.customview.CusExpandableListView
            android:id="@+id/worksend_unit_expanlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>


