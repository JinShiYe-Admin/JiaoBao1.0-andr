<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sendmessage_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.jsy_jiaobao.customview.IEditText
            android:id="@+id/unitmsg_edit_edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ui_10dp"
            android:background="@drawable/edittext_bg"
            android:hint="@string/input_title"
            android:minHeight="@dimen/ui_60dp"
            android:padding="@dimen/ui_5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ui_10dp"
            android:background="@drawable/edittext_bg"
            android:minHeight="@dimen/ui_150dp"
            android:orientation="vertical" >

            <com.jsy_jiaobao.customview.IEditText
                android:id="@+id/unitmsg_edit_edt_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/input_content"
                android:minHeight="@dimen/ui_60dp"
                android:padding="@dimen/ui_5dp" />

            <Button
                android:id="@+id/unitmsg_edit_btn_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_face" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ui_10dp"
            android:background="@drawable/edittext_bg"
            android:minHeight="@dimen/ui_80dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/unitmsg_edit_img_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_5dp"
                android:background="@drawable/photo" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ui_10dp"
            android:gravity="right">
            <Button
                android:id="@+id/unitmsg_edit_btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ui_10dp"
                android:layout_marginLeft="@dimen/ui_5dp"
                android:text="@string/release_withSpace"
                android:textColor="@color/white"
                android:background="@drawable/buttonbg" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>