<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/parent_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_10dp" />

        <TextView
            android:id="@+id/parent_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_48dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/parent_icon"
            android:layout_marginLeft="@dimen/ui_10dp"
            android:gravity="center_vertical"
            android:text="@string/waiting_manage_message" />

        <TextView
            android:id="@+id/parent_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_20dp"
            android:layout_toRightOf="@id/parent_text"
            android:background="@drawable/textview_badview"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/parent_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ui_10dp"
            android:background="@drawable/btn_more"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/parent_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ui_10dp"
            android:layout_toLeftOf="@id/parent_more"
            android:background="@drawable/img_expan" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/layout_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sendmessage_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_child1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ui_80dp" >

            <TextView
                android:id="@+id/child1_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ui_40dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/send_toMe" />

            <TextView
                android:id="@+id/child1_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ui_20dp"
                android:layout_toRightOf="@id/child1_text"
                android:background="@drawable/textview_badview"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/child1_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ui_10dp"
                android:background="@drawable/btn_more" />

            <ImageView
                android:id="@+id/child1_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ui_10dp"
                android:layout_toLeftOf="@id/child1_more"
                android:background="@drawable/img_expan" />
        </RelativeLayout>

        <com.jsy_jiaobao.customview.CusListView
            android:id="@+id/child1_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_3dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/layout_child2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_40dp"
            android:background="@color/sendmessage_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ui_80dp" >

            <TextView
                android:id="@+id/child2_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ui_40dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/reply_toMe" />

            <TextView
                android:id="@+id/child2_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ui_20dp"
                android:layout_toRightOf="@id/child2_text"
                android:background="@drawable/textview_badview"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/child2_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ui_10dp"
                android:background="@drawable/btn_more" />

            <ImageView
                android:id="@+id/child2_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ui_10dp"
                android:layout_toLeftOf="@id/child2_more"
                android:background="@drawable/img_expan" />
        </RelativeLayout>

        <com.jsy_jiaobao.customview.CusListView
            android:id="@+id/child2_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" 
            android:divider="@null"/>
    </LinearLayout>

</LinearLayout>