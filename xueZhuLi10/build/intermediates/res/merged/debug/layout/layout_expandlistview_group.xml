<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_to_dip_48"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebeb"
        android:orientation="horizontal"
        android:layout_marginTop="1px"
        android:layout_marginBottom="1px" >

        <ImageView
            android:id="@+id/expan_group_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_to_dip_36"
            android:src="@drawable/expan_group_plus" />

        <TextView
            android:id="@+id/expan_group_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:gravity="center_vertical"
            android:text="@string/friend"
            android:textColor="#616060"
            android:textSize="@dimen/px_to_sp_16" />
    </LinearLayout>

</LinearLayout>