<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/reciveritem_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/reciveritem_parent_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_10dp" />

        <TextView
            android:id="@+id/reciveritem_parent_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_60dp"
            android:gravity="center_vertical"
            android:text="@string/waitingFor_manageMessage" />

        <ImageView
            android:id="@+id/reciveritem_parent_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ui_10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <com.jsy_jiaobao.customview.CusGridView
        android:id="@+id/reciveritem_child_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" 
        android:numColumns="2"/>

</LinearLayout>