<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical"
    android:minHeight="@dimen/px_to_dip_40"
    android:paddingLeft="@dimen/px_to_dip_10"
    android:paddingRight="@dimen/px_to_dip_10" >

    <TextView
        android:id="@+id/tree_root_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
		android:text="@string/class_choose"/>

    <TextView
        android:id="@+id/tree_root_tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/px_to_dip_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_to_dip_15"
        android:layout_marginRight="@dimen/px_to_dip_15"
        android:layout_toRightOf="@id/tree_root_tv_name"
        android:text="@string/first_grade"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="#ff6800"
        android:textSize="@dimen/px_to_sp_20" />

    <ImageView
        android:id="@+id/tree_root_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_worksend_selit_plus" />


</RelativeLayout>