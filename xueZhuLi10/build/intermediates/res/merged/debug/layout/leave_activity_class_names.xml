<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/leave_llayout_choose_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_choose_class" />

        <Spinner
            android:id="@+id/leave_spn_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:prompt="@string/leave_please_choose_class"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <com.jsy_jiaobao.customview.CusListView
        android:id="@+id/leave_clv_stunames"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.jsy_jiaobao.customview.CusListView>
</LinearLayout>