<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/quaryunit_item_img_photo"
        android:layout_width="@dimen/ui_60dp"
        android:layout_height="@dimen/ui_60dp"
        android:layout_margin="@dimen/ui_10dp"
        android:background="@drawable/photo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_70dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/quaryunit_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/golden_view_headQuarter"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/quaryunit_item_tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/quaryunit_item_tv_article"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/quaryunit_item_tv_today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>