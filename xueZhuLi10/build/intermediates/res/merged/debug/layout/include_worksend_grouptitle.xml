<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px_to_dip_5"
    android:paddingBottom="@dimen/px_to_dip_5"
    android:background="@color/sendmessage_bg"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/sendmessage_group_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ui_5dp"
        android:gravity="center_vertical"
        android:text="@string/unname" />

    <Button
        android:id="@+id/sendmessage_group_invert"
        android:layout_width="@dimen/px_to_dip_70"
        android:layout_height="@dimen/px_to_dip_40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_to_dip_10"
        android:background="@drawable/btn_sendmsg_invert" />

    <Button
        android:id="@+id/sendmessage_group_toall"
        android:layout_width="@dimen/px_to_dip_70"
        android:layout_height="@dimen/px_to_dip_40"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_to_dip_10"
        android:layout_toLeftOf="@id/sendmessage_group_invert"
        android:background="@drawable/btn_sendmsg_all" />

</RelativeLayout>