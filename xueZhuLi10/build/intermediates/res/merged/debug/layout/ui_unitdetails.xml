<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/unitdetails_img_logo"
            android:layout_width="@dimen/ui_60dp"
            android:layout_height="@dimen/ui_60dp"
            android:layout_margin="@dimen/ui_10dp"
            android:background="@drawable/photo"/>
        <TextView 
            android:id="@+id/unitdetails_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/golden_view_headQuarter"/>
    </LinearLayout>
	<ExpandableListView 
	    android:id="@+id/unitdetails_expandablelistview"
	    android:layout_width="match_parent"
	    android:cacheColorHint="#00000000"  
	    android:layout_height="match_parent"/>
</LinearLayout>
