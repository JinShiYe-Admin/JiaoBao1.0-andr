<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/px_to_dip_14" >

        <TextView
            android:id="@+id/workol_stuhw_tv_icon"
            android:layout_width="@dimen/px_to_dip_30"
            android:layout_height="@dimen/px_to_dip_30"
            android:background="@drawable/icon_workol_zhuguan" />

        <TextView
            android:id="@+id/workol_stuhw_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_to_dip_10"
            android:singleLine="true"
            android:textColor="@color/color_2589d1"
            android:textSize="@dimen/px_to_sp_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px_to_dip_14" >

        <TextView
            android:id="@+id/workol_stuhw_tv_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_amount"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/px_to_sp_16" />

        <TextView
            android:id="@+id/workol_stuhw_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/workol_stuhw_tv_num1"
            android:textSize="@dimen/px_to_sp_16" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/workol_stuhw_tv_time0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expiration_"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/workol_stuhw_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_to_sp_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/workol_stuhw_tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_work"
            android:textColor="@color/color_2589d1"
            android:textSize="@dimen/px_to_sp_16"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/workol_stuhw_ll_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/workol_stuhw_tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_to_dip_5"
                android:paddingRight="@dimen/px_to_dip_10"
                android:textColor="@color/color_ff6800"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/study_power"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/workol_stuhw_tv_edulevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px_to_dip_5"
                android:textColor="@color/color_ff6800"
                android:textSize="@dimen/px_to_sp_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>