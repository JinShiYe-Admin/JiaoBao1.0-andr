<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/px_to_dip_20" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/regist_tv_getnumber_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_to_dip_10"
            android:text="@string/phone_verificationCode"
            android:textColor="#292929"
            android:textSize="@dimen/px_to_sp_20" />

        <com.jsy_jiaobao.customview.IEditText
            android:id="@+id/regist_edt_phonechecknumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="@string/please_input6_phone_verificationCode"
            android:inputType="phone"
            android:paddingLeft="@dimen/px_to_dip_120"
            android:textColor="#292929"
            android:textColorHint="#b3b3b3"
            android:textSize="@dimen/px_to_sp_20" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/retist_iv_second_picnumber"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_to_dip_80"
            android:layout_alignParentRight="true"
            android:minWidth="@dimen/px_to_dip_100" />

        <com.jsy_jiaobao.customview.IEditText
            android:id="@+id/regist_edt_second_picnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/retist_iv_second_picnumber"
            android:hint="@string/please_input_pictureVerificationCode"
            android:inputType="number"
            android:paddingLeft="@dimen/px_to_dip_120"
            android:textColor="#292929"
            android:textColorHint="#b3b3b3"
            android:textSize="@dimen/px_to_sp_20" />
    </RelativeLayout>

    <TextView
        android:id="@+id/regist_tv_secondcheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_to_dip_84"
        android:background="@drawable/work_btnsend_shape"
        android:gravity="center"
        android:text="@string/verification"
        android:textColor="@color/white" />

</LinearLayout>