<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_writeinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ui_48dp"
                android:background="@color/seashell"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/lable_selectedtime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ui_10dp"
                    android:gravity="center_vertical"
                    android:text="@string/chose_date_" />

                <TextView
                    android:id="@+id/write_tv_selecttime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ui_5dp"
                    android:layout_toRightOf="@+id/lable_selectedtime"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_unit_" />

                <Spinner
                    android:id="@+id/write_sp_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ui_5dp"
                    android:background="@drawable/edittext_writeworkplan" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_address_" />

                <com.jsy_jiaobao.customview.IEditText
                    android:id="@+id/write_edt_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ui_5dp"
                    android:background="@drawable/edittext_writeworkplan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time_" />

                <TextView
                    android:id="@+id/write_tv_begintime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ui_40dp"
                    android:layout_marginLeft="@dimen/ui_5dp"
                    android:background="@drawable/edittext_unableedit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_time_" />

                <TextView
                    android:id="@+id/write_tv_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ui_40dp"
                    android:layout_marginLeft="@dimen/ui_5dp"
                    android:background="@drawable/edittext_unableedit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_content_" />

                <com.jsy_jiaobao.customview.IEditText
                    android:id="@+id/write_edt_workplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ui_5dp"
                    android:background="@drawable/edittext_writeworkplan"
                    android:minHeight="@dimen/ui_60dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_date_" />

                <TextView
                    android:id="@+id/write_tv_committime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ui_5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>