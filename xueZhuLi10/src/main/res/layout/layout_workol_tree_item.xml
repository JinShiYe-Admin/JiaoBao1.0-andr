<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tree_workol_layout_clazzb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_to_dip_40"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/px_to_dip_5" >

            <CheckBox
                android:id="@+id/tree_workol_clazz_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/workol_tea_checkbox"
                android:paddingLeft="@dimen/px_to_dip_10"
                android:textColor="@color/color_797979"
                android:textSize="@dimen/px_to_sp_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tree_workol_clazzb_layout_chose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficult"
                android:textColor="@color/color_797979"
                android:textSize="@dimen/px_to_sp_18" />

            <RadioGroup
                android:id="@+id/tree_workol_clazz_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/tree_workol_clazz_radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_to_dip_15"
                    android:button="@drawable/workol_tea_radiobutton"
                    android:checked="true"
                    android:text="@string/one"
                    android:textColor="@color/color_797979"
                    android:textSize="@dimen/px_to_sp_18" />

                <RadioButton
                    android:id="@+id/tree_workol_clazz_radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_to_dip_15"
                    android:button="@drawable/workol_tea_radiobutton"
                    android:text="@string/two"
                    android:textColor="@color/color_797979"
                    android:textSize="@dimen/px_to_sp_18" />

                <RadioButton
                    android:id="@+id/tree_workol_clazz_radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_to_dip_15"
                    android:button="@drawable/workol_tea_radiobutton"
                    android:text="@string/three"
                    android:textColor="@color/color_797979"
                    android:textSize="@dimen/px_to_sp_18" />

                <RadioButton
                    android:id="@+id/tree_workol_clazz_radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_to_dip_15"
                    android:button="@drawable/workol_tea_radiobutton"
                    android:text="@string/four"
                    android:textColor="@color/color_797979"
                    android:textSize="@dimen/px_to_sp_18" />

                <RadioButton
                    android:id="@+id/tree_workol_clazz_radio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_to_dip_15"
                    android:button="@drawable/workol_tea_radiobutton"
                    android:text="@string/five"
                    android:textColor="@color/color_797979"
                    android:textSize="@dimen/px_to_sp_18" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tree_workol_layout_grade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_48"
        android:layout_marginLeft="@dimen/px_to_dip_40"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tree_workol_grade_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/workol_tea_radiobutton"
            android:checked="true" />

        <TextView
            android:id="@+id/tree_workol_grade_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/px_to_dip_10"
            android:text="@string/first_grade"
            android:textColor="@color/color_797979"
            android:textSize="@dimen/px_to_sp_18" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tree_workol_layout_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_48"
        android:layout_marginLeft="@dimen/px_to_dip_40"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tree_workol_txt_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/workol_tea_radiobutton"
            android:checked="true" />

        <ImageView
            android:id="@+id/tree_workol_iv_toggle"
            android:layout_width="@dimen/px_to_dip_30"
            android:layout_height="@dimen/px_to_dip_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:padding="@dimen/px_to_dip_5"
            android:src="@drawable/icon_worksend_selit_plus" />

        <TextView
            android:id="@+id/tree_workol_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/tree_workol_iv_toggle"
            android:layout_toRightOf="@id/tree_workol_txt_radiobutton"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_to_dip_10"
            android:singleLine="true"
            android:text="@string/first_grade"
            android:textColor="@color/color_797979"
            android:textSize="@dimen/px_to_sp_18" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tree_workol_layout_others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_to_dip_40"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_to_dip_48"
                android:gravity="center_vertical"
                android:text="@string/title_change"
                android:textColor="@color/color_797979"
                android:textSize="@dimen/px_to_sp_18" />

            <com.jsy_jiaobao.customview.IEditText
                android:id="@+id/tree_workol_others_edtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_to_dip_10"
                android:layout_marginRight="@dimen/px_to_dip_10"
                android:maxLength="49"
                android:singleLine="true"
                android:textSize="@dimen/px_to_sp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_to_dip_48"
                android:gravity="center_vertical"
                android:text="@string/stop_time"
                android:textColor="@color/color_797979"
                android:textSize="@dimen/px_to_sp_18" />

            <com.jsy_jiaobao.customview.IEditText
                android:id="@+id/tree_workol_others_edttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_to_dip_10"
                android:layout_marginRight="@dimen/px_to_dip_10"
                android:textSize="@dimen/px_to_sp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/homework_timeLong"
                android:textColor="@color/color_797979"
                android:textSize="@dimen/px_to_sp_18" />

            <com.jsy_jiaobao.customview.RadioGroup
                android:id="@+id/tree_workol_others_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/tree_workol_others_radio10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_to_dip_15"
                        android:button="@drawable/workol_tea_radiobutton"
                        android:text="@string/ten"
                        android:textColor="@color/color_797979"
                        android:textSize="@dimen/px_to_sp_18" />

                    <RadioButton
                        android:id="@+id/tree_workol_others_radio20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_to_dip_15"
                        android:button="@drawable/workol_tea_radiobutton"
                        android:checked="true"
                        android:text="@string/twenty"
                        android:textColor="@color/color_797979"
                        android:textSize="@dimen/px_to_sp_18" />

                    <RadioButton
                        android:id="@+id/tree_workol_others_radio30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_to_dip_15"
                        android:button="@drawable/workol_tea_radiobutton"
                        android:text="@string/thirty"
                        android:textColor="@color/color_797979"
                        android:textSize="@dimen/px_to_sp_18" />

                    <RadioButton
                        android:id="@+id/tree_workol_others_radio40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_to_dip_15"
                        android:button="@drawable/workol_tea_radiobutton"
                        android:text="@string/forty"
                        android:textColor="@color/color_797979"
                        android:textSize="@dimen/px_to_sp_18" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_to_dip_10"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/tree_workol_others_radio60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_to_dip_15"
                        android:button="@drawable/workol_tea_radiobutton"
                        android:text="@string/sixty"
                        android:textColor="@color/color_797979"
                        android:textSize="@dimen/px_to_sp_18" />

                    <RadioButton
                        android:id="@+id/tree_workol_others_radio90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_to_dip_15"
                        android:button="@drawable/workol_tea_radiobutton"
                        android:text="@string/ninty"
                        android:textColor="@color/color_797979"
                        android:textSize="@dimen/px_to_sp_18" />

                    <RadioButton
                        android:id="@+id/tree_workol_others_radio120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_to_dip_15"
                        android:button="@drawable/workol_tea_radiobutton"
                        android:text="@string/oneTwoO"
                        android:textColor="@color/color_797979"
                        android:textSize="@dimen/px_to_sp_18" />
                </LinearLayout>
            </com.jsy_jiaobao.customview.RadioGroup>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>