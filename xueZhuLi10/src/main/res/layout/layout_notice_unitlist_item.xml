<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:background="@color/white"
        android:gravity="center_vertical" >
		<TextView 
		    android:id="@+id/notice_unititem_exp"
		    android:layout_width="@dimen/ui_48dp"
		    android:layout_height="wrap_content"
		    android:visibility="gone"/>
        <ImageView
            android:id="@+id/notice_unititem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notice_unititem_exp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_10dp" />

        <TextView
            android:id="@+id/notice_unititem_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ui_10dp"
            android:layout_toRightOf="@id/notice_unititem_icon"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/notice_unititem_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_20dp"
            android:layout_toRightOf="@id/notice_unititem_name"
            android:background="@drawable/textview_badview"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notice_unititem_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ui_10dp"
            android:background="@drawable/btn_more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </RelativeLayout>


</LinearLayout>