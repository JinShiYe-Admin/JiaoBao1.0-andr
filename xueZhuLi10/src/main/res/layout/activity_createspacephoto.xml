<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/ui_10dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:gravity="center_vertical"
        android:text="@string/album_name"
        android:textSize="@dimen/text_size_16" />

    <com.jsy_jiaobao.customview.IEditText
        android:id="@+id/createphoto_edt_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:gravity="center_vertical"
        android:hint="@string/album_name" />
<!-- 删除学校圈新建相册的相册介绍 
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:gravity="center_vertical"
        android:text="@string/album_introduce"
        android:textSize="@dimen/text_size_16" />

    <com.jsy.xuezhuli.customview.IEditText
        android:id="@+id/createphoto_edt_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:enabled="false"
        android:gravity="center_vertical"
        android:hint="@string/default_comeFrom_phone"
        android:textSize="@dimen/text_size_16" />
-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_48dp"
        android:gravity="center_vertical"
        android:text="@string/album_permission"
        android:textSize="@dimen/text_size_16" />

    <Spinner
        android:id="@+id/createphoto_spinner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ui_48dp" />

</LinearLayout>