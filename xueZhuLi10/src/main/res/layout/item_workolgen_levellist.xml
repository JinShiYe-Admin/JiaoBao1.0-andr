<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/workol_stuhw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/px_to_dip_10"
        android:paddingLeft="@dimen/px_to_dip_20"
        android:paddingRight="@dimen/px_to_dip_20"
        android:paddingTop="@dimen/px_to_dip_10" >

        <TextView
            android:id="@+id/workol_stuhw_tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_workol_close" />

        <TextView
            android:id="@+id/workol_stuhw_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_to_dip_50"
            android:layout_toLeftOf="@id/workol_stuhw_tv_flag"
            android:text="@string/study_power"
            android:textColor="#21292b"
            android:textSize="@dimen/px_to_sp_18" />

        <TextView
            android:id="@+id/workol_stuhw_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="15"
            android:layout_toLeftOf="@id/workol_stuhw_tv_score"
            android:text="@string/course"
            android:textColor="#21292b"
            android:textSize="@dimen/px_to_sp_18" />
    </RelativeLayout>

</LinearLayout>