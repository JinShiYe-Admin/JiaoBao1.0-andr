<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:padding="@dimen/px_to_dip_10" >

        <TextView
            android:id="@+id/qiuzhi_sift_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:textColor="@color/color_2589d1"
            android:textSize="@dimen/px_to_sp_22" />

        <TextView
            android:id="@+id/qiuzhi_sift_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/qiuzhi_sift_tv_title"
            android:layout_marginTop="@dimen/px_to_dip_10"
            android:gravity="bottom"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/px_to_sp_18" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center">

        <ImageView
            android:id="@+id/qiuzhi_sift_iv_cover"
            android:layout_width="@dimen/px_to_dip_100"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/px_to_dip_100"
            android:layout_margin="@dimen/px_to_dip_5"/>
    </RelativeLayout>

</LinearLayout>