<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical"
    android:minHeight="@dimen/px_to_dip_40"
    android:paddingLeft="@dimen/px_to_dip_10"
    android:paddingRight="@dimen/px_to_dip_10" >

    <ImageView
        android:id="@+id/tree_root_iv_arrow_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_worksend_selit_plus" />

    <TextView
        android:id="@+id/tree_root_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/px_to_dip_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_to_dip_15"
        android:layout_marginRight="@dimen/px_to_dip_15"
        android:layout_toRightOf="@id/tree_root_iv_arrow_1"
        android:text="ad"
        android:textColor="#ff6800"
        android:textSize="@dimen/px_to_sp_20" />

    <ImageView
        android:id="@+id/tree_root_iv_arrow_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tree_root_tv_name"
        android:src="@drawable/icon_worksend_selit_plus_p" />

    <CheckBox
        android:id="@+id/tree_root_cb_invert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inverse"
        android:textColor="#292929"
        android:minHeight="@dimen/px_to_dip_40"
        android:button="@null"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/px_to_sp_20" />
    <CheckBox
        android:id="@+id/tree_root_cb_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/worksend_checkedbox"
        android:text="@string/all_select"
        android:minHeight="@dimen/px_to_dip_40"
        android:layout_marginRight="@dimen/px_to_dip_10"
        android:textColor="#292929"
        android:layout_toLeftOf="@id/tree_root_cb_invert"
        android:layout_centerVertical="true"
        android:textSize="@dimen/px_to_sp_20" />

</RelativeLayout>