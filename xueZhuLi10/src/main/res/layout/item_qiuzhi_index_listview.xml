<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qiuzhi_item_layout_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/qiuzhi_item_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/qiuzhi_item_layout_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/qiuzhi_item_tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/px_to_dip_5"
                android:paddingRight="@dimen/px_to_dip_15"
                android:singleLine="true"
                android:text="@string/details"
                android:textColor="@color/color_E67215"
                android:textSize="@dimen/px_to_sp_16" />

            <LinearLayout
                android:id="@+id/ly_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/qiuzhi_item_tv_details"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px_to_dip_20"
                android:paddingLeft="@dimen/px_to_dip_5"
                android:paddingRight="@dimen/px_to_dip_5"
                android:paddingTop="@dimen/px_to_dip_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_qiuzhi_question" />

                <ImageView
                    android:id="@+id/qiuzhi_item_iv_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_to_dip_10"
                    android:src="@drawable/icon_qiuzhi_top"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/qiuzhi_item_tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px_to_dip_10"
                    android:singleLine="true"
                    android:textColor="@color/color_2589d1"
                    android:textSize="@dimen/px_to_sp_20" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qiuzhi_item_layout_questionmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_to_dip_10" >

            <TextView
                android:id="@+id/qiuzhi_item_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_to_dip_30"
                android:text="@string/topic_"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/qiuzhi_item_tv_1"
                android:textColor="@color/color_292929"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_clicknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/px_to_dip_10"
                android:paddingRight="@dimen/px_to_dip_20"
                android:textColor="@color/color_292929"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/qiuzhi_item_tv_clicknum"
                android:text="@string/visit_"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_answernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/qiuzhi_item_tv_2"
                android:paddingLeft="@dimen/px_to_dip_10"
                android:paddingRight="@dimen/px_to_dip_15"
                android:textColor="@color/color_292929"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/qiuzhi_item_tv_answernum"
                android:text="@string/answer_"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_attnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/qiuzhi_item_tv_3"
                android:paddingLeft="@dimen/px_to_dip_10"
                android:paddingRight="@dimen/px_to_dip_15"
                android:textColor="@color/color_292929"
                android:textSize="@dimen/px_to_sp_16" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/qiuzhi_item_tv_attnum"
                android:text="@string/follow_"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/px_to_sp_16" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/qiuzhi_item_view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_cccccc" />

    <LinearLayout
        android:id="@+id/qiuzhi_item_layout_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px_to_dip_10" >

        <RelativeLayout
            android:id="@+id/qiuzhi_item_layout_answerermsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/qiuzhi_item_tv_likenum"
                android:layout_width="@dimen/px_to_dip_50"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_to_dip_10"
                android:background="#73b7e7"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/px_to_sp_14" />

            <ImageView
                android:id="@+id/qiuzhi_item_iv_photo"
                android:layout_width="@dimen/px_to_dip_50"
                android:layout_height="@dimen/px_to_dip_50"
                android:layout_below="@id/qiuzhi_item_tv_likenum"
                android:scaleType="fitCenter"
                android:src="@drawable/photo" />

            <TextView
                android:id="@+id/qiuzhi_item_tv_author"
                android:layout_width="@dimen/px_to_dip_50"
                android:layout_height="wrap_content"
                android:layout_below="@id/qiuzhi_item_iv_photo"
                android:layout_marginTop="@dimen/px_to_dip_10"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/px_to_sp_16" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/qiuzhi_item_layout_answercontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_to_dip_15"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qiuzhi_item_tv_answer_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_qiuzhi_answer_" />

                <TextView
                    android:id="@+id/qiuzhi_item_tv_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/px_to_sp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_to_dip_5"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/qiuzhi_item_tv_gist_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_qiuzhi_gist_" />

                <TextView
                    android:id="@+id/qiuzhi_item_tv_gist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_f5f5f5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/px_to_sp_18" />
            </LinearLayout>

            <GridView
                android:id="@+id/qiuzhi_item_gv_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_to_dip_15"
                android:numColumns="3"
                android:scrollbars="none"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/qiuzhi_item_layout_answermsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_to_dip_15" >

                <TextView
                    android:id="@+id/qiuzhi_item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_aaaaaa"
                    android:textSize="@dimen/px_to_sp_16" />

                <TextView
                    android:id="@+id/qiuzhi_item_tv_commentnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_292929"
                    android:textSize="@dimen/px_to_sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/qiuzhi_item_tv_commentnum"
                    android:text="@string/comment_"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="@dimen/px_to_sp_16" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>