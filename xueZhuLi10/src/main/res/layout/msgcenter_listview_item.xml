<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/msgcenter_listview_img_photo"
            android:layout_width="@dimen/ui_48dp"
            android:layout_height="@dimen/ui_48dp"
            android:layout_margin="@dimen/ui_10dp"
            android:src="@drawable/photo"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ui_10dp"
        android:layout_marginTop="@dimen/ui_10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/msgcenter_listview_tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sendme_textcolor"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/msgcenter_listview_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/sendme_textcolor"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/msgcenter_listview_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_5dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

</LinearLayout>