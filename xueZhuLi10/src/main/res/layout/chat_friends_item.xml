<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_70"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chat_friends_checkbox"
            android:layout_width="@dimen/px_to_dip_40"
            android:layout_height="@dimen/px_to_dip_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_to_dip_20"
            android:layout_gravity="center_vertical"
            style="@style/crowd_checkbox"/>

        <ImageView
            android:id="@+id/chat_friends_photo"
            android:layout_width="@dimen/px_to_dip_48"
            android:layout_height="@dimen/px_to_dip_48"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/chat_friends_checkbox"
            android:layout_marginLeft="@dimen/px_to_dip_5"
            android:padding="@dimen/ui_3dp" />

        <TextView
            android:id="@+id/chat_friends_nick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/chat_friends_photo"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/px_to_dip_13"
            android:textColor="#292929"
            android:textSize="@dimen/px_to_sp_20" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d7d7" 
        android:layout_marginLeft="@dimen/px_to_dip_17"
        android:layout_marginRight="@dimen/px_to_dip_17"/>

</LinearLayout>