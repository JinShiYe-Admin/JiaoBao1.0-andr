<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/pc_layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.jsy_jiaobao.customview.CusGridView
                android:id="@+id/pc_show_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ui_5dp"
                android:layout_marginRight="@dimen/ui_5dp"
                android:layout_marginTop="@dimen/ui_5dp"
                android:horizontalSpacing="@dimen/ui_5dp"
                android:numColumns="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/pc_layout_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/sendmessage_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pc_show_clickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/ui_5dp"
                        android:text="@string/please_choose_column_orUnit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pc_layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/sendmessage_bg"
                    android:orientation="vertical" >

                    <com.jsy_jiaobao.customview.PCWorkItemOneChildView
                        android:id="@+id/pc_show_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />

                    <com.jsy_jiaobao.customview.PCWorkItemOneChildView
                        android:id="@+id/pc_show_myclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />

                    <com.jsy_jiaobao.customview.PCWorkItemOneChildView
                        android:id="@+id/pc_show_otherclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />
                </LinearLayout>

                <com.jsy_jiaobao.customview.CusListView
                    android:id="@+id/pc_show_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ui_5dp"
                    android:layout_marginRight="@dimen/ui_5dp"
                    android:divider="@color/gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sendmessage_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ui_5dp"
        android:paddingLeft="@dimen/ui_10dp"
        android:paddingRight="@dimen/ui_10dp"
        android:paddingTop="@dimen/ui_5dp" >

        <Button
            android:id="@+id/pc_show_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:gravity="center"
            android:minHeight="@dimen/ui_40dp"
            android:singleLine="true"
            android:text="@string/release_artical"
            android:textColor="@color/sendme_textcolor" />
    </LinearLayout>

</LinearLayout>