<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_refresh_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ly_leave_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ry_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" 
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp">

            <Button
                android:id="@+id/btn_del"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_qiuzhi_updata_btn"
                android:text="@string/leave_withdraw"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_change"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/btn_del"
                android:background="@drawable/bg_qiuzhi_updata_btn"
                android:text="@string/leave_modify"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>