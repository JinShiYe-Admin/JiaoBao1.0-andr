<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_show2_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_34"
        android:background="#ebebeb"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_show2_typename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_to_dip_17"
            android:gravity="center_vertical"
            android:textColor="#616060"
            android:textSize="@dimen/px_to_sp_18" />

        <ImageView
            android:id="@+id/item_show2_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/px_to_dip_29"
            android:scaleType="center"
            android:src="@drawable/icon_show2_more" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_show2_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_show2_photo"
            android:layout_width="@dimen/px_to_dip_56"
            android:layout_height="@dimen/px_to_dip_56"
            android:layout_marginLeft="@dimen/px_to_dip_17"
            android:layout_marginRight="@dimen/px_to_dip_12"
            android:layout_marginTop="@dimen/px_to_dip_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_to_dip_19"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_show2_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_to_dip_19"
                    android:textColor="#495e8e"
                    android:textSize="@dimen/px_to_sp_20" />

                <TextView
                    android:id="@+id/item_show2_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_to_dip_19"
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/px_to_sp_20" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_show2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_to_dip_14"
                android:textColor="#292929"
                android:textSize="@dimen/px_to_sp_20" />

            <TextView
                android:id="@+id/item_show2_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_to_dip_10"
                android:layout_marginTop="@dimen/px_to_dip_10"
                android:background="#f5f5f5"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/px_to_dip_5"
                android:paddingLeft="@dimen/px_to_dip_10"
                android:paddingTop="@dimen/px_to_dip_5"
                android:textColor="#292929"
                android:textSize="@dimen/px_to_sp_18" />

            <com.jsy_jiaobao.customview.CusGridView
                android:id="@+id/item_show2_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_to_dip_15"
                android:horizontalSpacing="@dimen/px_to_dip_10"
                android:numColumns="3"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_to_dip_48" >

                <TextView
                    android:id="@+id/item_show2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/px_to_sp_16" />

                <TextView
                    android:id="@+id/item_show2_clicktext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_to_dip_50"
                    android:layout_toRightOf="@id/item_show2_time"
                    android:gravity="center_vertical"
                    android:text="@string/click_amount_"
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/px_to_sp_16" />

                <TextView
                    android:id="@+id/item_show2_click"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px_to_dip_25"
                    android:layout_toRightOf="@id/item_show2_clicktext"
                    android:gravity="center_vertical"
                    android:textColor="#292929"
                    android:textSize="@dimen/px_to_sp_16" />

                <TextView
                    android:id="@+id/item_show2_liketext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/item_show2_click"
                    android:gravity="center_vertical"
                    android:text="@string/click_follow_"
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/px_to_sp_16" />

                <TextView
                    android:id="@+id/item_show2_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/item_show2_liketext"
                    android:gravity="center_vertical"
                    android:textColor="#292929"
                    android:textSize="@dimen/px_to_sp_16" />

                <TextView
                    android:id="@+id/item_show2_showpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_show_showpp"
                    android:padding="@dimen/px_to_dip_10" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.jsy_jiaobao.customview.CusListView
        android:id="@+id/item_show2_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_to_dip_80"
        android:layout_marginRight="@dimen/px_to_dip_12"
        android:layout_marginTop="@dimen/px_to_dip_5"
        android:background="@drawable/bg_artlist_comment"
        android:divider="@null"
        android:padding="@dimen/px_to_dip_10"
        android:visibility="gone" />

</LinearLayout>