<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        layout="@layout/layout_xlistview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sendmessage_bg"
        android:paddingBottom="@dimen/ui_5dp"
        android:paddingLeft="@dimen/ui_10dp"
        android:paddingRight="@dimen/ui_10dp"
        android:paddingTop="@dimen/ui_5dp" >

        <Button
            android:id="@+id/noticeartlist_btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:gravity="center"
            android:minHeight="@dimen/ui_40dp"
            android:singleLine="true"
            android:text="@string/release_artical"
            android:textColor="@color/sendme_textcolor" />
    </RelativeLayout>

</LinearLayout>