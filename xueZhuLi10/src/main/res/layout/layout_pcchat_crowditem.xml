<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/crowd_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_67"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/crowd_parent_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_to_dip_17" />

        <TextView
            android:id="@+id/crowd_parent_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_to_dip_13"
            android:layout_toRightOf="@id/crowd_parent_icon"
            android:gravity="center_vertical"
            android:textColor="#292929"
            android:textSize="@dimen/px_to_sp_20"
            android:text="群组1" />

        <TextView
            android:id="@+id/crowd_parent_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_10dp"
            android:layout_toRightOf="@id/crowd_parent_text"
            android:background="@drawable/textview_badview"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone" />

<!--         <ImageView
            android:id="@+id/crowd_parent_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ui_10dp"
            android:background="@drawable/chat_crowd" /> -->

        <ImageView
            android:id="@+id/crowd_parent_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_to_dip_46"
            android:background="@drawable/icon_crowd_plus" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d7d7" 
        android:layout_marginLeft="@dimen/px_to_dip_17"
        android:layout_marginRight="@dimen/px_to_dip_17"/>

    <com.jsy_jiaobao.customview.CusExpandableListView
        android:id="@+id/crowd_child_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@null" />

</LinearLayout>