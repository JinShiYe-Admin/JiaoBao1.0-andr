<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_to_dip_10" >

        <TextView
            android:id="@+id/qiuzhi_item_siftiontop_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/phase_toSelect"
            android:textColor="@color/color_E67215"
            android:textSize="@dimen/px_to_sp_20" />

        <TextView
            android:id="@+id/qiuzhi_item_siftiontop_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/px_to_dip_20"
            android:layout_toLeftOf="@id/qiuzhi_item_siftiontop_tv_more"
            android:singleLine="true"
            android:text="@string/first_phase"
            android:textColor="@color/color_2589d1"
            android:textSize="@dimen/px_to_sp_20" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_150" >

        <com.jsy_jiaobao.customview.SlideShowView
            android:id="@+id/qiuzhi_item_siftiontop_slideShowView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_to_dip_150" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="#4b808080"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/qiuzhi_item_siftiontop_slider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>