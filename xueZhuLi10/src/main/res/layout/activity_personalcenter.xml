<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/personal_iv_photo"
                android:layout_width="@dimen/px_to_dip_100"
                android:layout_height="@dimen/px_to_dip_100"
                android:layout_margin="@dimen/px_to_dip_20"
                android:scaleType="centerCrop"
                android:src="@drawable/logo72" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/px_to_dip_10"
                        android:text="@string/nickname_" />

                    <TextView
                        android:id="@+id/personal_tv_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/px_to_dip_10"
                        android:singleLine="true"
                        android:textSize="@dimen/px_to_sp_20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/px_to_dip_10"
                        android:text="@string/name_" />

                    <TextView
                        android:id="@+id/personal_tv_truename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/px_to_dip_10"
                        android:ems="20"
                        android:singleLine="true"
                        android:textSize="@dimen/px_to_sp_20" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/px_to_dip_20" >

            <TextView
                android:layout_width="@dimen/px_to_dip_120"
                android:layout_height="wrap_content"
                android:text="@string/account_info" />

            <TextView
                android:id="@+id/personal_tv_jiaobaohao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/z5150000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_to_dip_20" >

            <TextView
                android:id="@+id/personal_tv_pwdtxt"
                android:layout_width="@dimen/px_to_dip_120"
                android:layout_height="wrap_content"
                android:text="@string/passwords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/personal_tv_pwdtxt"
                android:text="@string/all_star" />

            <TextView
                android:id="@+id/personal_tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/personal_tv_pwdtxt"
                android:drawableRight="@drawable/icon_worksend_selit_plus"
                android:gravity="right"
                android:text="@string/reset"
                android:textColor="@color/red" />

        </RelativeLayout>
        	<View
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
                android:visibility="gone"
		    android:background="@color/color_b2b2b2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/personal_tv_qiuzhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/px_to_dip_10"
                android:layout_marginBottom="@dimen/px_to_dip_10"
                android:layout_marginLeft="@dimen/px_to_dip_20"
                android:layout_marginRight="@dimen/px_to_dip_20"
                android:minHeight="@dimen/px_to_dip_48"
                android:text="@string/qiuZhi_personal_center"
                android:drawableRight="@drawable/icon_worksend_selit_plus" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_allUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/px_to_dip_20"
                    android:text="@string/all_unit"
                    />

                <TextView
                    android:id="@+id/personal_tv_getunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_allUnit"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/icon_worksend_selit_plus"
                    android:padding="@dimen/px_to_dip_20"
                    android:textColor="@color/red" />
            </RelativeLayout>

            <TextView
                android:id="@+id/personal_tv_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_to_dip_20"
                android:layout_marginRight="@dimen/px_to_dip_20" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/px_to_dip_20" >

            <TextView
                android:id="@+id/personal_tv_yinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="用户隐私政策"
                android:drawableRight="@drawable/icon_worksend_selit_plus" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/px_to_dip_20" >

            <TextView
                android:id="@+id/personal_tv_known"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="用户协议"
                android:drawableRight="@drawable/icon_worksend_selit_plus" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/px_to_dip_20" >

            <TextView
                android:id="@+id/cancellation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="注销账户"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/px_to_dip_10"
            android:layout_marginRight="@dimen/px_to_dip_10"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_to_dip_20" >

            <TextView
                android:id="@+id/personal_tv_fankui"
                android:layout_width="@dimen/px_to_dip_120"
                android:layout_height="wrap_content"
                android:text="问题反馈" />

            <TextView
                android:id="@+id/personal_tv_fankui_detail"
                android:layout_width="wrap_content"
                android:autoLink="email"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/personal_tv_fankui"
                android:text="如果您有任何建议或问题欢迎给我们发送邮件（）与我们联系。" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>