<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popup_artlist_shape"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/pp_artlist_img_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:src="@drawable/icon_pp_like" />

    <View
        android:layout_width="2dp"
        android:layout_height="15dp"
        android:layout_marginLeft="@dimen/px_to_dip_20"
        android:layout_marginRight="@dimen/px_to_dip_20"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/pp_artlist_img_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:src="@drawable/icon_pp_commit" />

</LinearLayout>