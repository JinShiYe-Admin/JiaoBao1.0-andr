<?xml version="1.0" encoding="utf-8"?>
<com.jsy_jiaobao.customview.IRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pc_work_parent"
    android:background="@color/white" >

    <ScrollView
        android:id="@+id/pc_layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/pc_layout_work"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ui_5dp"
            android:layout_marginRight="@dimen/ui_5dp"
            android:orientation="vertical" >

            <!-- <include layout="@layout/layout_personalcenter_search" /> -->

            <com.jsy_jiaobao.customview.PCWorkItemView
                android:id="@+id/pc_work_undeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.jsy_jiaobao.customview.PCWorkItemView
                android:id="@+id/pc_work_dealed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.jsy_jiaobao.customview.PCWorkItemOneChildView
                android:id="@+id/pc_work_sended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.jsy_jiaobao.customview.PCWorkItemOneChildView
                android:id="@+id/pc_work_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.jsy_jiaobao.customview.PCWorkItemOneChildView
                android:id="@+id/pc_work_fromhigher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.jsy_jiaobao.customview.PCWorkItemOneChildView
                android:id="@+id/pc_work_shotmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <com.jsy_jiaobao.customview.DragButton
        android:id="@+id/pc_work_btn_send"
        android:layout_width="@dimen/ui_60dp"
        android:layout_height="@dimen/ui_60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/work_btnsend_shape"
        android:clickable="true"
        android:singleLine="true"
        android:text="新建"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

</com.jsy_jiaobao.customview.IRelativeLayout>