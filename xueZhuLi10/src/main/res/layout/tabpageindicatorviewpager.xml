<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_messagecenter_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.jsy_jiaobao.main.personalcenter.NoScrollViewPager
        android:id="@+id/base_layout_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d8d8" />

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/base_tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_72" />

</LinearLayout>