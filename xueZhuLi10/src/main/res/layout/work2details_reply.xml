<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px_to_dip_24"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/workdetails_layout_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/workdetails_reply_photo"
            android:layout_width="@dimen/px_to_dip_54"
            android:layout_height="@dimen/px_to_dip_54"
            android:layout_marginRight="@dimen/px_to_dip_5"
            android:src="@drawable/bottom_pc_selected" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_to_dip_70"
        android:layout_toLeftOf="@id/workdetails_layout_reply"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/workdetails_reply_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px_to_dip_12"
            android:maxLines="1"
            android:maxWidth="@dimen/px_to_dip_100"
            android:text="回复者回复者回复者回复者回复者"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_conversation_bubble_blue"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/workdetails_reply"
                android:layout_width="wrap_content"
                android:textIsSelectable="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/workdetails_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/px_to_sp_16" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>