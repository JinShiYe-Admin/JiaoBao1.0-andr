<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_to_dip_72"
        android:background="#fcfcfc" >

        <ImageView
            android:id="@+id/tabview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_to_dip_8"/>

        <TextView
            android:id="@+id/tabview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tabview_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="@color/bottom_text"
            android:textSize="@dimen/px_to_sp_16" />

        <ImageView
            android:id="@+id/tabview_notice"
            android:layout_width="@dimen/px_to_dip_10"
            android:layout_height="@dimen/px_to_dip_10"
            android:layout_marginTop="@dimen/px_to_dip_8"
            android:layout_toRightOf="@id/tabview_icon"
            android:background="@drawable/textview_badview" 
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>